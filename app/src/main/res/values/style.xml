<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="MyLabel.value">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyRadioLabel" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyRoundedImage">
        <item name="shapeAppearance">@style/Rounded16</item>
    </style>
    <style name="Rounded16" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">15%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="MySpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>