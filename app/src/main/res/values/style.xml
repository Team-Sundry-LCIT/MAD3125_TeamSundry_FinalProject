<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="MyLabel.value">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyRadioLabel" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyRoundedImage">
        <item name="shapeAppearance">@style/Rounded16</item>
    </style>
    <style name="Rounded16" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">15%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="MySpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.MAD3125_TeamSundry_FinalProject.RemoveSplashScreenTheme" parent="@style/Theme.MAD3125_TeamSundry_FinalProject">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryBackground">@color/textColorPrimary</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/search</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorDisabled</item>
        <item name="android:tint">@color/textColorPrimary</item>
    </style>


    <style name="MyTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyTextButton.Options">
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">12dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">start</item>

    <style name="MyLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>